{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "pretty": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "target": "ES2022",
    "types": ["bun-types"]
  },
  "include": ["src", "__tests__"]
}
